<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="as_generate_report_views" model="ir.ui.view">
        <field name="name">Resumen global de obra</field>
        <field name="model">as.generate.order</field>
        <field name="arch" type="xml">
            <form string="Resumen global de obra ">
                <group col="4">
                    <field name="as_sale" required="1"/>
                 
                    
                </group>
                <footer>
                    <button name="export_xls" 
                        default_focus="1"
                        string="Imprimir" 
                        type="object" 
                        class="oe_highlight"
                        context="{'xls_export':1}" 
                        icon="fa-download"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_generate_report" model="ir.actions.act_window">
        <field name="name">Resumen global de obra </field>
        <field name="res_model">as.generate.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_generate_report_views"/>
        <field name="target">new</field>
    </record>

  <menuitem id="menu_reporte_obra_global" name="Resumen global de obra" action="action_generate_report" parent="account_reports.account_reports_partners_reports_menu"/>
</data>
</odoo>
