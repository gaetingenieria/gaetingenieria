<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_hr_payslip_inherit_form4">
            <field name="name">hr.payslip.inherit.form4</field>
            <field name="model">hr.payslip</field>
             <field name="priority">15</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form" />
            <field name="arch" type="xml">
                <field name="paid" position="after">
                    <field name="indicadores_id" required="1" />
                </field>
                <field name="credit_note" position="replace">
                    <field name="movimientos_personal" String="CÃ³digo Movimiento" widget="many2many_tags" />
                     <field name="as_sin_movimiento" invisible="1" />
                     <field name="as_days_rest"  />
                    <field name="date_start_mp" String="Inicio MP"
                        attrs="{'invisible': [('as_sin_movimiento', '=', False)]}" />
                    <field name="date_end_mp" String="Fin MP"
                        attrs="{'invisible': [('as_sin_movimiento', '=', False)]}" />
                </field>
                <xpath expr="//field[@name='line_ids']" position="after">
                    <field name="line_ids1" colspan="4" nolabel="1">
                        <tree string="Salary Structure" editable="bottom" decoration-info="total == 0" >
                            <field name="name" />
                            <field name="code" />
                            <field name="category_id" />
                            <field name="sequence" invisible="1" />
                            <field name="quantity" />
                            <field name="rate" />
                            <field name="salary_rule_id" />
                            <field name="amount" />
                            <field name="total" />
                        </tree>
                        <form string="Payslip Line">
                            <group col="4">
                                <field name="name" />
                                <field name="code" />
                                <field name="category_id" />
                                <field name="sequence" />
                                <field name="quantity" />
                                <field name="rate" />
                                <field name="amount" />
                                <field name="total" />
                                <field name="salary_rule_id" />
                            </group>
                        </form>
                    </field>
                </xpath>
                <xpath expr="//field[@name='line_ids']" position="attributes">
                 <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@name='account_info']" position="after">
                    <page string="Contabilidad">
                        <group>
                            <field name="move_id" />
                        </group>
                    </page>
                    <page string="Aportes Patronales">
                        <field name="line_ids2" colspan="4" nolabel="1">
                            <tree string="Salary Structure" editable="bottom" decoration-info="total == 0">
                                <field name="name" />
                                <field name="code" />
                                <field name="category_id" />
                                <field name="sequence" invisible="1" />
                                <field name="quantity" />
                                <field name="rate" />
                                <field name="salary_rule_id" />
                                <field name="amount" />
                                <field name="total" />
                            </tree>
                            <form string="Payslip Line">
                                <group col="4">
                                    <field name="name" />
                                    <field name="code" />
                                    <field name="category_id" />
                                    <field name="sequence" />
                                    <field name="quantity" />
                                    <field name="rate" />
                                    <field name="amount" />
                                    <field name="total" />
                                    <field name="salary_rule_id" />
                                </group>
                            </form>
                        </field>
                    </page>

                </xpath>
            </field>
        </record>


        <!-- Payslip Line -->
        <record id="view_hr_payslip_line_tree_inherit_1" model="ir.ui.view">
            <field name="name">hr.payslip.line.tree.inherit</field>
            <field name="model">hr.payslip.line</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_line_tree" />
            <field name="arch" type="xml">
                <field name="rate" position="replace">
                    <field name="rate" invisible="1" />
                </field>
            </field>
        </record>

    </data>
</odoo>