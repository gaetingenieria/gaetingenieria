<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_carta_preaviso" model="ir.ui.view">
            <field name="name">Carta de Preaviso</field>
            <field name="model">as.carta.preaviso</field>
            <field name="arch" type="xml">
                <form string="Carta de Preaviso">
                    <group col="2">
                        <field name="employer_id" options="{'no_create': True}"/>
                        <field name="partner_id" options="{'no_create': True}"/>
                        <field name="date" />
                        <field name="date_end" />
                        <field name="as_articulo_id" />
                        <field name="as_fundamento"/>

                    </group>
                    <footer>
                        <button name="export_pdf" type="object" default_focus="1" string="Generar PDF"
                            icon="fa-print" class="oe_highlight" />

                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_report_carta_preaviso" model="ir.actions.act_window">
            <field name="name">Carta de Preaviso</field>
            <field name="res_model">as.carta.preaviso</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_carta_preaviso" />
            <field name="target">new</field>
        </record>

        <menuitem id="as_carta_preaviso_report" name="Carta de Preaviso" action="as_report_carta_preaviso"
            parent="menu_cl_hr_payroll_reports" sequence="57"/>
    </data>
</odoo>