<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_planilla_sueldos" model="ir.ui.view">
            <field name="name">Libro de Remuneraciones</field>
            <field name="model">as.payslip.report</field>
            <field name="arch" type="xml">
                <form string="Libro de Remuneraciones">
                    <group col="2">
                         <field name="employer_id" /> 
                        <field name="payslip_run_id" options="{'no_create': True}"/>
                        <!--  <field name="as_filtro_dep" />-->
                         <field name="as_name_afp" widget="many2many_tags"/> 

                    </group>
                    <footer>
                        <button name="export_xls" type="object" default_focus="1" string="Generar en Excel"
                            context="{'xls_export':1}" icon="fa-print" class="oe_highlight" />
                        <!-- <button name="export_pdf" type="object" default_focus="1" string="Generar PDF"
                            icon="fa-print" class="oe_highlight" /> -->

                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_action_planilla_sueldos" model="ir.actions.act_window">
            <field name="name">Libro de Remuneraciones</field>
            <field name="res_model">as.payslip.report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_planilla_sueldos" />
            <field name="target">new</field>
        </record>

        <report 
        id="as_hr_cl_planilla_sueldos_report" 
        model="hr.payslip.run" 
        string="Libro de Remuneraciones"
        report_type="xlsx" 
        name="as_hr_cl.planilla_sueldos.xlsx" 
        file="as_hr_cl.planilla_sueldos.xlsx"
        attachment_use="False" 
        menu="False" />

        <menuitem id="as_planilla_sueldos_report" name="Libro de Remuneraciones" action="as_action_planilla_sueldos"
            parent="menu_cl_hr_payroll_reports" sequence="57"/>
    </data>
</odoo>