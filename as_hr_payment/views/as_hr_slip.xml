<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_hr_payslip_paid_inherit_form4">
            <field name="name">hr.payslip.run.form.inherit5</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_validate']" position="after">
                    <button string="Generar Pagos" name="action_payslip_paid" type="object" states="close"
                        class="oe_highlight" context="{'payslip_generate_pdf': True}" />
                </xpath>
                <xpath expr="//notebook[@name='lineas']" position="inside">
                    <page string="Pagos">
                        <group>
                            <field name="as_paid"/>
                            <field name="payment_ids" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>