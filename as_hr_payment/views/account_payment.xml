<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_account_term_form" model="ir.ui.view">
            <field name="name">as.account.term</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="priority" eval="101" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="as_type_operation" />
                    <field name="slip_id" attrs="{'invisible' : [('as_type_operation', '!=', 'nomina')]}" />
                    <field name="payslip_run_id"
                        attrs="{'invisible' : [('as_type_operation', '!=', 'procesamiento')]}" />
                </xpath>  
                <xpath expr="//sheet/group" position="after">
                    <notebook attrs="{'invisible' : ['|',('as_type_operation', 'not in', ('procesamiento','nomina'))]}">
                        <page string="Lineas de Contrapartida" >
                            <field name="slip_ids"/>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>