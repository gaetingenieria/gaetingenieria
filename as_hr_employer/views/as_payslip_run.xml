<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payslip_run_form_employer" model="ir.ui.view">
            <field name="name">hr.payslip.run.form.employer</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="employer_id"/>
                </xpath>
            </field>
        </record>
          <record id="hr_payslip_run_tree_employer_tree" model="ir.ui.view">
            <field name="name">hr.payslip.run.tree.employer5</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                     <field name="employer_id"/>
                     <field name="rut"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>