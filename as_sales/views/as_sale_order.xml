<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Sale Order form view -->
	<record id="view_order_form_inherit_nucleo_view" model="ir.ui.view">
		<field name="name">view.order.form.inherit.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="priority">55</field>
		<field name="arch" type="xml">


			<xpath expr="//field[@name='date_order']" position="after">
				<field name="as_fecha_Editable" invisible="True" />
			</xpath>
			<xpath expr="//field[@name='date_order']" position="attributes">
				<attribute name="attrs">{'readonly': [('as_fecha_Editable','=',False)]}</attribute>
				<attribute name="readonly">False</attribute>

			</xpath>
		</field>
	</record>
</odoo>